
  <h1>Login</h1>

  <%= flash[:error] %>
  <div>
    <%= form_tag login_path do %>
      <%= label_tag :email %>
      <%= text_field_tag :email, '', :autofocus => true %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <%= submit_tag 'Login' %>

    <% end %>
  </div>
