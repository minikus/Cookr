<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Suburb</th>
      <th>Address</th>
      <th>User</th>
      <th>Chef</th>
      <th>Menu</th>
      <th>Description</th>
      <th>Guests</th>
      <th>Confirm</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.time %></td>
        <td><%= event.suburb %></td>
        <td><%= event.address %></td>
        <td><%= event.user_id %></td>
        <td><%= event.chef_id %></td>
        <td><%= event.menu_id %></td>
        <td><%= event.description %></td>
        <td><%= event.guests %></td>
        <td><%= event.confirm %></td>
        <td><%= event.price %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

