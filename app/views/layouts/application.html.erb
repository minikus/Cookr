<!DOCTYPE html>
<html>
<head>
  <title>Cookr</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/ScrollMagic.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.5/plugins/debug.addIndicators.min.js"></script>

</head>
<body>
  <div class="container">
    <nav>
      <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <div class="navbar-brand"><%= link_to "COOKR", root_path %></div>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left">
              <li><%= link_to "Chefs", chefs_path%></li>
              <li><%= link_to "Menus", menus_path%></li>
              <% if @current_user.present? %>
              <li><%= link_to "Events", events_path%></li>
              <li><%= link_to "Messages", messages_path%></li>

              <li><a href="/users/<%=@current_user.id%>">Profile</a></li>
              <li><%= link_to "Logout #{@current_user.first_name.capitalize}", login_path, :method => :delete%></li>
              <li class="dropdown">
                <% if @current_user.admin? %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">ADMIN<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li class="dropdown-header">Admin</li>
                  <li><%= link_to "All Users", users_path %></li>
                <% end %>
                </ul>
              </li>
              <% else %>
                <li><%= link_to "Signup", new_user_path %></li>
                <li><%= link_to "Login", login_path %></li>
              <% end %>
            </ul>
        </div>
      </div>
  </nav>
    <%= yield %>

  </body>
</div>
</html>
