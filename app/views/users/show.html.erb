<br><br><br>
  <p id="notice"><%= notice %></p>

  <% if @current_user == @user %>
    <h1>Hello <%= @user.first_name %></h1>
  <% else %>
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
  <% end %>
<br>
<div class="usersProfile">
  <% if @user.chef? && @user.bio.present? %>
  <h3><%= "'" + @user.bio + "'" %></h3>
  <% end %>
  <br><br>
    <div class="profileImage">
    <%= image_tag @user.image%>
  </div>

  <div class="profileInfo">

    <% #show host or chef depending on @user.chef status %>
    <% if @user.chef? %>
      <h3> Chef <%= @user.last_name %> </h3>
    <% elsif !@user.chef? %></p>
      <p><strong> Host </strong>
    <% end %>

    <p><strong>Email:</strong> <%= @user.email %> </p>

    <% #only show the admin status if the current user is an admin %>
    <% if @current_user.present? && @current_user.admin? %>
      <p><strong> User is Admin </strong></p>
    <% end %>

    <% #only show the phone number if @user is a chef or current user is admin %>
    <% if @user.chef? || @current_user.admin? %>
      <p><strong>Phone:</strong> <%= @user.phone %></p>
    <% end %>

    <% #only show the chef bio, rate, and menus if they are a chef %>
    <% if @user.chef? %>
    <p><strong>Rate per hour :</strong><%= number_to_currency(@user.rate) %></p>
    <strong>Menus:</strong>
    <% @user.menus.each do |menu| %>
      <li><%= link_to menu.title, menu %></li>
    <% end %>
    <% end %>
  </div>
    <div class="return">
      <% if @current_user.present? && (@current_user.admin? || @current_user.id === @user.id) %>
        <%= link_to 'Edit', edit_user_path(@user), :class => "btn btn-default" %>
        <%= link_to 'Add Menu', new_menu_path, :class => "btn btn-default" %>
      <% end %>
  </div>
</div>



<div class="reviewsShow">

  <h2><%= @user.first_name %>'s Reviews</h2>
  <h4>Create a new review for <%= @user.first_name %></h4>

  <div class="chefReviews">
    <%= form_for ([@user, Review.new]), html: {multipart: true} do |f| %>
  <div>
    <strong>Ratings from 1 - 10:</strong>
      <br>
      <p>1 = Bad Cooking, 10 = Masterchef!!<p>
  </div>

    <fieldset class="label reviewRating">
      <h4><%= f.label :rating %></h4>
      <%= f.number_field :rating %>
    </fieldset>

    <fieldset class="label reviewComments">
      <h4><%= f.label :comments %></h4>
      <%= f.text_area :review, size: "60x12" %>
    </fieldset>

    <fieldset>
      <%= f.submit %>
    </fieldset>
    <% end %>
  </div>

  <h2>Previous Reviews</h2>
  <% @user.reviews.each do |review| %>
    <div class="individual_reviews">
      <span class="rating"><%= review.rating %>
        / 10 :</span>
      <span class="review_comments"><%= review.review %></span>

      <br><br>

      <div class="light-orange">
        Review by:
        <%= link_to review.reviewer.first_name, review.reviewer %>
      </div>
    </div>
    <% end %>
  </div>
</div>
