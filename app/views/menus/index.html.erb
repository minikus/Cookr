<p id="notice"><%= notice %></p>

<h1>Listing Menus</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Cuisine</th>
      <th>Description</th>
      <th>Pricepp</th>
      <th>Dietry</th>
      <th>Gluten free</th>
      <th>Vego</th>
      <th>Title</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.user_id %></td>
        <td><%= menu.cuisine %></td>
        <td><%= menu.description %></td>
        <td><%= menu.pricePP %></td>
        <td><%= menu.dietry %></td>
        <td><%= menu.gluten_free %></td>
        <td><%= menu.vego %></td>
        <td><%= menu.title %></td>
        <td><%= menu.image %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

