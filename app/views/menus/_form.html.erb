<%= form_for @menu do |f| %>

  <div class="field">
    <%= f.label :cuisine %><br>
    <%= f.text_field :cuisine, :required => true  %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :required => true  %>
  </div>
  <div class="field">
    <%= f.label :pricePP %><br>
    <%= f.number_field :pricePP, :required => true  %>
  </div>
  <div class="field">
    <%= f.label :dietry %><br>
    <%= f.text_area :dietry, :required => true  %>
  </div>
  <div class="field">
    <%= f.label :gluten_free %><br>
    <%= f.check_box :gluten_free %>
  </div>
  <div class="field">
    <%= f.label :vego %><br>
    <%= f.check_box :vego %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :required => true  %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
